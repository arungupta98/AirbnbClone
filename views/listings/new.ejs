<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Creat New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input
            name="listing[title]"
            type="text"
            placeholder="enter title"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter title</div>
        </div>
        <div class="mb-3">
          <label for="listing[image]" class="form-label">Upload Image:</label>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label>
            <input
              name="listing[price]"
              placeholder="enter price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input
              name="listing[country]"
              type="text"
              placeholder="enter country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the country</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location:</label>
          <input
            name="listing[location]"
            type="text"
            placeholder="Enter location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter the location</div>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category:</label>
          <input
            name="listing[category]"
            type="text"
            placeholder="Enter category"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter the category</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"> Description:</label>

          <textarea
            name="listing[description]"
            placeholder="Write in brief"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <br />
        <button class="btn btn-dark mb-3 add-btn">Done</button>
      </form>
    </div>
  </div>
</body>
